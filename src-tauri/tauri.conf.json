{
  "build": {
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "modern-clippy",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": true
    },
    "bundle": {
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.clippy.dev",
      "targets": "all"
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "label": "main",
        "title": "Moden Clippy",
        "width": 800,
        "height": 600,
        "transparent": true,
        "visible": true,
        "center": true,
        "resizable": false,
        "alwaysOnTop": true,
        "focus": true,
        "skipTaskbar": true,
        "acceptFirstMouse": true,
        "fullscreen": false,
        "decorations": false,
        "titleBarStyle": "Transparent",
        "url": "index.html"
      }
    ],
    "systemTray": {
      "iconPath": "icons/ClippyIconTemplate@3x.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false
    },
    "macOSPrivateApi": true
  }
}